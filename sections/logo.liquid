<!--Start logo  -->

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}



<div class="rivew-main section-{{ section.id }}-padding">
    <div class="page-width">
        <div class="rivew-part">

           {%- for block in section.blocks -%}
            <div class="rivew-item">
              <a href="{{ block.settings.image-link }}">
                {% if block.settings.image != blank %}
                <img src="{{ block.settings.image |image_url:width:auto }}"/>
                  {% endif %}
              </a>
       </div>
          {% endfor %}
</div>
    </div>
</div>



<!--End logo  -->
{% schema %}
  {
    "name": "Logo",
    "settings": [
      {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
    ],
    "blocks": [
      {
        "type": "logo",
        "name":"Block",
        "settings": [
          {
            "type": "image_picker",
            "id":"image",
            "label":"Image"
          },
          {
            "type":"url",
            "id":"imae-link",
            "label":"Image Link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Logo"
      }
    ]
  }
{% endschema %}